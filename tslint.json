{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": [true, 300],
    "member-ordering": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single", "avoid-escape", "avoid-template"]
  },
  "linterOptions": {
    "exclude": ["./node_modules/**"]
  }
}
