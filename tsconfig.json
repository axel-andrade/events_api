{
  "compilerOptions": {
    "noImplicitAny": true,
    "declaration": false,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "target": "ES2019",
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@infra/*": ["src/infra/*"],
      "@adapters": ["src/adapters/index"],
      "@entities": ["src/entities/index"],
      "@useCases/*": ["src/use-cases/*"],
      "@shared/*": ["src/shared/*"],
      "@server": ["src/server"]
    }
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
